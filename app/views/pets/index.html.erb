<h1>Index Pets</h1>

<h2>search:</h2>
<%= form_tag(pets_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Pets Type" %>
    <%= submit_tag "Search", :name => nil %>
<% end %>


<ul>
    <% @pets.each do |pet| %>
    <li>
      <%= link_to pet.name, pet_path(pet) %>
    </li>
    <% end %>
</ul>
